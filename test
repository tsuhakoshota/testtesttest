    <script>
      let started = true;
      let playing = true;
      window.addEventListener("click", function () {
        let video = document.querySelector("#viddd");
        if (!started) {
          let avideo = document.querySelector("#av");
          video.play();
          started = true;
          playing = true;
        } else {
          if (playing) {
            video.pause();
            playing = false;
          } else {
            video.play();
            playing = true;
          }
        }
      });
    </script>
